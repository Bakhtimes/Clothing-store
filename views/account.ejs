<!DOCTYPE html>
<html>
    <head>
        <style>
            .container {
                display:flex;
                flex-direction: column;
                padding-left: 15px;
            }
            .container div {
                display: flex;
                flex-direction: column;
                border-style: solid;
                border-width: 1px;
                border-color: black;
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <a href="/account">Return</a>
        <h1>Account</h1>
        <div class="container">
            <% if(account) { %>
                <div>
                    <p>Name: <a href="/accounts/<%= account._id %>"><%= account.name %></a></p>
                    <p>Contact: <%= account.contact.phone %></p>
                    <p>Balance: <%= account.balance %> <%= account.balance %></p>
                </div>
                <form method="POST" action="/accounts/<%= account._id %>/delete">
                    <input type="hidden" name="resourceId" value="<%= account._id %>">
            
                    <button type="submit">Delete</button>
                </form>
            <% } else { %>
                <div>No account was found</div>
            <% } %>
            
        </div>
        <h1>Change</h1>
        <form class="container" method="POST" action="/accounts/<%= account._id %>/put">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name">
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea type="text" id="description" name="description"></textarea>
            </div>
            <div>
                <label for="amount">balance in tenge:</label>
                <input type="number" id="balance" name="balance">
            </div>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>