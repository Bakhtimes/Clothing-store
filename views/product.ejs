<!DOCTYPE html>
<html>
    <head>
        <style>
            .container {
                display:flex;
                flex-direction: column;
                padding-left: 15px;
            }
            .container div {
                display: flex;
                flex-direction: column;
                border-style: solid;
                border-width: 1px;
                border-color: black;
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <a href="/products">Return</a>
        <h1>Product</h1>
        <div class="container">
            <% if(product) { %>
                <div>
                    <p>Name: <a href="/products/<%= product._id %>"><%= product.name %></a></p>
                    <p>Description: <%= product.description %></p>
                    <p>Price: <%= product.price.type %> <%= product.price.amount %></p>
                </div>
                <form method="POST" action="/products/<%= product._id %>/delete">
                    <input type="hidden" name="resourceId" value="<%= product._id %>">
            
                    <button type="submit">Delete</button>
                </form>
            <% } else { %>
                <div>No product was found</div>
            <% } %>
            
        </div>
        <h1>Change</h1>
        <form class="container" method="POST" action="/products/<%= product._id %>/put">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name">
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea type="text" id="description" name="description"></textarea>
            </div>
            <div>
                <label for="amount">Price in tenge:</label>
                <input type="number" id="price" name="price">
            </div>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>