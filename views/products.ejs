<!DOCTYPE html>
<html>
    <head>
        <style>
            .container {
                display:flex;
                flex-direction: column;
                padding-left: 15px;
            }
            .container div {
                display: flex;
                flex-direction: column;
                border-style: solid;
                border-width: 1px;
                border-color: black;
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <h1>Products</h1>
        <div class="container">
            <% if(products.length > 0) { %>
                <% products.forEach((product) => {
                            %>
                                <div>
                                    <p>Name: <a href="/products/<%= product._id %>"><%= product.name %></a></p>
                                    <p>Description: <%= product.description %></p>
                                    <p>Price: <%= product.price.type %> <%= product.price.amount %></p>
                                </div>
                            <%
                        })%>
            <% } else { %>
                <div>No products were found</div>
            <% } %>
            
        </div>
        <h1>Insert one</h1>
        <form class="container" method="POST" action="/insert_product">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea type="text" id="description" name="description" required></textarea>
            </div>
            <div>
                <label for="amount">Price in tenge:</label>
                <input type="number" id="price" name="price" required>
            </div>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>